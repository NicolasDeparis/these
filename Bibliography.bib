	file = {arXiv\:1412.5184 PDF:/home/deparis/.zotero/zotero/ur7cam7o.default/zotero/storage/25UGCDGP/Gnedin - 2014 - Modeling Physical Processes at Galactic Scales and.pdf:application/pdf;arXiv.org Snapshot:/home/deparis/.zotero/zotero/ur7cam7o.default/zotero/storage/3X49GMIU/1412.html:text/html}

	annote = {Comment: 22 pages, 18 figures},
	file = {arXiv.org Snapshot:/home/deparis/.zotero/zotero/ur7cam7o.default/zotero/storage/Q3PUMZUU/Kimm et al. - 2015 - Towards simulating star formation in turbulent hig.html:text/html}

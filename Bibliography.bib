	file = {NASA/ADS Full Text PDF:/home/deparis/.zotero/zotero/ur7cam7o.default/zotero/storage/Z5P4G72U/Dubois and Teyssier - 2008 - Supernova Feedback in Galaxy Formation.pdf:application/pdf}
}

